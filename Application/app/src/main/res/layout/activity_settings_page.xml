<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.anastasia.application.SettingsPage"
    android:orientation="vertical"
    android:background="#ebfafb">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="статус:"
            android:id="@+id/settings_page_status_text" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/settings_page_status_input"
            android:layout_column="2" />
    </LinearLayout>

    <Button
        android:text="@string/refresh"
        android:id="@+id/settings_page_status_button"
        android:layout_column="0"
        android:onClick="onClick"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_span="3"
        android:background="@android:drawable/editbox_dropdown_light_frame" />

    <Button
        android:text="@string/fon_color_string"
        android:id="@+id/settings_fon_color_button"
        android:layout_column="0"
        android:layout_span="3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:background="@android:drawable/editbox_dropdown_light_frame" />

    <Button
        android:text="@string/font_color"
        android:id="@+id/settings_font_color_button"
        android:layout_column="0"
        android:layout_span="3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:layout_gravity="center_horizontal"
        android:background="@android:drawable/editbox_dropdown_light_frame" />

    <Button
        android:id="@+id/settings_font_style_button"
        android:layout_column="0"
        android:layout_span="3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:layout_gravity="center_horizontal"
        android:text="@string/font_style"
        android:background="@android:drawable/editbox_dropdown_light_frame" />

    <Button
        android:id="@+id/settings_font_size_button"
        android:layout_column="0"
        android:layout_span="3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:layout_gravity="center_horizontal"
        android:text="@string/font_size"
        android:background="@android:drawable/editbox_dropdown_light_frame" />

</LinearLayout>
